<h2>顧客一覧</h2>
  <table class="table">
   <thead>
    <tr>
      <th>Name</th>

    </tr>
   </thead>
  <tbody>
    <% @customer.each do |customer| %>
      <tr>
        <td><%= link_to customer.full_name,admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_deleted %>
            <span>退会</span>
            <% else %>
            <span>有効</span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>